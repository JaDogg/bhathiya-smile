<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E3F7FF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgStatGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/reward_gold"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatGold"
            android:src="@drawable/reward_xp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatPhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatXP"
            android:src="@drawable/task_physical"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatMen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatPhy"
            android:src="@drawable/task_mental"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatSch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatMen"
            android:src="@drawable/task_work"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatHom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatSch"
            android:src="@drawable/task_house"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgStatSoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgStatHom"
            android:src="@drawable/task_social"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtStatGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatGold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgStatGold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtStatXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatXP"
            android:layout_alignLeft="@+id/txtStatGold"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgStatXP"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/pbStatPhysical"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatPhy"
            android:layout_alignLeft="@+id/txtStatXP"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtStatXP"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_states" />

        <ProgressBar
            android:id="@+id/pbStatMental"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatMen"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgStatMen"
            android:layout_toRightOf="@+id/imgStatMen"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:progress="20"
            android:progressDrawable="@drawable/progress_bar_states" />

        <ProgressBar
            android:id="@+id/pbStatSchool"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatSch"
            android:layout_alignLeft="@+id/pbStatMental"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgStatSch"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:progress="40"
            android:progressDrawable="@drawable/progress_bar_states" />

        <ProgressBar
            android:id="@+id/pbStatHouse"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatHom"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgStatSch"
            android:layout_toRightOf="@+id/imgStatSch"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:progress="10"
            android:progressDrawable="@drawable/progress_bar_states" />

        <ProgressBar
            android:id="@+id/pbStatSocial"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgStatSoc"
            android:layout_alignLeft="@+id/pbStatHouse"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pbStatHouse"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:progress="90"
            android:progressDrawable="@drawable/progress_bar_states" />
    </RelativeLayout>

</ScrollView>